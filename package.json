    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jest": "21.15.1",
    "jest": "22.4.3",
    "nodemon": "1.17.4",
    "sequelize-cli": "4.0.0",
    "sinon": "5.0.7",
    "supertest": "3.1.0"
  }
