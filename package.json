    "test-unit-watch": "jest --config tests/unit/jest.config.js --watch",
    "migrate": "sequelize db:migrate",
    "seed": "sequelize db:seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/servirme/api.git"
  },
