    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "precommit": "npm run lint",
        "start": "nodemon local/server -q",
        "new-migration": "dynamo-migrator create",
        "migrate": "DYNAMO_ENDPOINT=http://localhost:4569 dynamo-migrator migrate",
        "dynamo-gui": "DYNAMO_ENDPOINT=http://localhost:4569 dynamodb-admin",
        "lint": "eslint src test",
        "validate-yml": "js-yaml serverless.yml",
        "ci-test": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- test/**/*.test.js",
        "send-coverage-data": "codecov",
        "test": "cross-env FORCE_COLOR=true DB_DIALECT=sqlite istanbul cover ./node_modules/mocha/bin/_mocha -- test/**/*.test.js",
        "deploy-prod": "sls deploy -s prod"
    },
    "repository": {
        "type": "git",
