  },
  "homepage": "https://github.com/servirme/api#readme",
  "dependencies": {
    "bcrypt": "3.0.1",
    "bluebird": "3.5.1",
    "body-parser": "1.18.3",
    "compression": "1.7.2",
    "cors": "2.8.4",
    "dotenv": "5.0.1",
    "express": "4.16.3",
    "i18n": "0.8.3",
    "joi": "13.3.0",
    "jsonwebtoken": "8.2.1",
    "log4js": "3.0.5",
    "pg": "7.4.3",
    "pm2": "2.10.4",
